 <section class="section section-on-footer" >
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="section-title">Contactanos!</h2>
      </div>
      <div class="col-lg-8 mx-auto">
        <div class="bg-white rounded text-center p-5 shadow-down">
          <h4 class="mb-80"> En breve le escribiremos </h4>
          <form method="post" action="/#contacto" class="row">
            <div class="col-md-6">
              <input type="text" id="nombre" name="nombre" placeholder=" Nombre completo" class="form-control px-0 mb-4" required>
                   </div>
            <div class="col-md-6">
                     
            <input type="email" id="mail" name="mail" placeholder=" Correo electrónico" class="form-control px-0 " required>
            
            </div>
                <div class="col-md-6">
              <input type="tel" id="phone" name="phone" placeholder=" Telefono" class="form-control px-0 mb-4" required>
                   </div>
              <div class="col-md-6">
                     
                    <select id= "serv" name= "serv" class="form-control px-0 mt-0" style="height: 60px;" >
              <option selected disabled> Servicio interesado</option>
              <option>Capacitaciones</option>
              <option>Consultoría</option>
              <option>Facilitaciones</option>
              <option>Otro</option>
              </select>
            </div>   
               
            <div class="col-12">
              <textarea name="texto" id="texto" class="form-control px-0 mb-4"
                placeholder=" Algo para agregar"></textarea>
            </div> 
            <div class="col-lg-6 col-10 mx-auto">
              <button class="btn btn-primary w-100 btn-vio" type="submit">Enviar</button>
             <span class="mt-3"> 
             {{message}}
             </span>
            </div>
            
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
